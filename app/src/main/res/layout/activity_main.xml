<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Weight"
        android:textSize="40dp"
       android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
android:layout_marginTop="50dp"
        android:layout_marginLeft="180dp"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Height"
        android:textSize="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        />

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="180dp"

        />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="220dp"
    android:layout_marginLeft="100dp"
    android:text="@string/calculateBMI"
    android:textSize="20dp"
    android:id="@+id/button1"
    android:onClick="calculate"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="Result"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="300dp"
android:id="@+id/result"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="BMI Classification"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="390dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Underweight less that 18.5"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="410dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Underweight 18.5 to 24.9"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="430dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:text="Overweight 25 to 29.9"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Obese class 1 between 30 to 34.9"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="470dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Obese class 2 between 35 to 39.9"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="490dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Obese class 3 greater tha 40"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="510dp"
        />
</RelativeLayout>